@model BloodBank_PBD.Models.User

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_MenuLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center admin-menu">update user information</div>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <div class="row">
                <div class="col-md-6 d-flex justify-content-center">
                    @Html.LabelFor(m => m.FirstName)
                </div>
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6 d-flex justify-content-center">
                    @Html.LabelFor(m => m.LastName)
                </div>
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6 d-flex justify-content-center">
                    @Html.LabelFor(m => m.Age)
                </div>
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Age, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6 d-flex justify-content-center">
                    @Html.LabelFor(m => m.BloodType)
                </div>
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.BloodType, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BloodType, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-6 d-flex justify-content-center">
                    @Html.LabelFor(m => m.Location)
                </div>
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @Html.HiddenFor(m => m.UserId)
        @Html.HiddenFor(m => m.UserName)
        @Html.HiddenFor(m => m.Password)

        <div class="row justify-content-center">
            <div class="col-md-2">
                <input type="submit" value="Update" class="btn btn-danger btn-block" />
            </div>
        </div>
    }
</div>
