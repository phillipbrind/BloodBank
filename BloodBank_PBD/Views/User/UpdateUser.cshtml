@model BloodBank_PBD.Models.User

@{
    Layout = null;
}

@section Scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

<h2>update user information</h2>

@using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "user-div" }))
{
    <div class="form-group">
        <div class="row">
            <div class="col-md-5 d-flex justify-content-center mt-4">
                @Html.LabelFor(m => m.FirstName)
            </div>
            <div class="col-md-5 mt-4">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-5 d-flex justify-content-center">
                @Html.LabelFor(m => m.LastName)
            </div>
            <div class="col-md-5">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-5 d-flex justify-content-center">
                @Html.LabelFor(m => m.Age)
            </div>
            <div class="col-md-5">
                @Html.TextBoxFor(m => m.Age, new { @class = "form-control", type = "number" })
                @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-5 d-flex justify-content-center">
                @Html.LabelFor(m => m.BloodType)
            </div>
            <div class="col-md-5">
                @Html.DropDownListFor(m => m.BloodType, ViewBag.BloodTypes as SelectList, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-5 d-flex justify-content-center mb-3">
                @Html.LabelFor(m => m.Location)
            </div>
            <div class="col-md-5 mb-3">
                @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Location, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.UserName)
    @Html.HiddenFor(m => m.Password)

    <div class="row justify-content-center">
        <div class="col-md-2">
            <input type="submit" value="Update" class="btn btn-danger btn-block" />
        </div>
    </div>
}
